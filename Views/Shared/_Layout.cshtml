<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Meu Banco</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <style>
        body {
            background: rgb(7,244,197);
            background: linear-gradient(90deg, rgba(7,244,197,1) 0%, rgba(38,225,232,1) 50%, rgba(1,140,168,1) 100%);          
            color: #333;
            font-family: Arial, sans-serif;
        }

        .navbar {
            background-color: #ffffff; 
        }

        .navbar-brand img {
            height: 40px; 
            border-radius: 30px;
        }

        .navbar-brand,
        .nav-link {
            color: #000 !important;
            font-size: 20px;
        }

        .nav-link:hover {
            text-decoration: underline;
        }

        footer {
            text-align: center !important; 
            padding: 1rem;
            position: fixed;
            bottom: 0;
            width: 100%;
            background-color: #00bcd4; 
            color: white;
            margin-top: 30px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <img src="~/images/Mybank.jpg" alt="Ícone do Banco" />
            </a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ms-2"> 
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Sobre", "Home")">Sobre</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Contato", "Home")">Contato</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer>
        &copy; 2024 - Meu Banco - Todos os direitos reservados.
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
